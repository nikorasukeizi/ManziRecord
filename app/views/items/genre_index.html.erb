<div class="page_title">
<h1><%= @genre.name %></h1>
</div>

<div class="container">
<div class="row">




<% @items.each do |item| %>

	<div class="CD_container col-lg-3" style="text-align: center; margin-top: 40px;">
		<%= link_to item_path(item.id) do %>
			<%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg" %>
			<p>CD名：<%= item.name %></p>
		<% end %>
		<p>アーティスト名：<%= item.artist.name %></p>
		<p>価格：<%= tax_included(item.price) %>円(税込)</p>
	</div>

<% end %>
</div>

<%= paginate @items %>

</div>



