                <%= attachment_image_tag item, :image, :fill, 100, 100, class: "jacket_image" %>
                <p>
                  <%= item.name %><br>
                  <%= item.artist.name %>
                </p>
              <% end %>
            </div>
            <% end %>
            <%= link_to "more", "genres/1/ranking", class:"btn btn-success see_more " %>
