<div class="main_visual">

  <!-- ランキング表示 -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
      <div class="headline">
        <h1><strong>~ Monthly Ranking ~</strong></h1>
      </div>
      <div class="top-ranking">
        <ul id="tab-menu">
          <li><a href="#tab1" class="active bg-primary">総合</a></li>
          <li><a href="#tab2" class="bg-success">JPOP</a></li>
          <li><a href="#tab3" class="bg-info">ROCK</a></li>
          <li><a href="#tab4" class="bg-warning">K-POP</a></li>
          <li><a href="#tab5" class="bg-danger">アニソン</a></li>
          <li><a href="#tab6" class="bg-primary">洋楽</a></li>
          <li><a href="#tab7" class="bg-success">卍</a></li>
