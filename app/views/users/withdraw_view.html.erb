<div class="container withdraw">

  <div class="row" style="margin-top:20px">
    <div class="col-xs-6 col-xs-offset-3">

      <fieldset>


      <h2>退会</h2>
      <h3> 退会について</h3>
      <p> 退会にはパスワードが必要です。</p>
      <p><strong> 退会されるとこちらのアカウントでのログインができなくなります。</strong></p>

      <div class="form">

        <%= form_for(current_user, url:user_withdraw_path(current_user.id)) do |f| %>

      <hr class="colorgraph">

          <div class="form-group form-inline">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>

      <hr class="colorgraph">

      <div class="row">
        <div class="col-xs-3">
          <%= link_to "マイページへ戻る", :back, class:"btn btn-info btn-lg" %>
        </div>
        <div class="actions col-xs-2 col-xs-offset-6">
          <%= f.submit "退会", class:"btn btn-danger btn-lg", data:{confirm:"本当に退会しますか?"} %>
        </div>
      </div>

      <% end %>
      </div>

      </fieldset>

    </div>
  </div>

</div>


