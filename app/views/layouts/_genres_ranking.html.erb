<% @items_rankall.where(genre_id).first(3).each_with_index do |item, i| %>
<div class="rank">
  <h1>Rank.<%= i+1 %></h1>
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image, :fill, 100, 100, class: "jacket_image" %>
    <p>
      <%= item.name %><br>
      <%= item.artist.name %>
    </p>
  <% end %>
</div>
<% end %>
<%= link_to "more", genres_ranking_path(genre_id), class:"btn btn-success see_more " %>