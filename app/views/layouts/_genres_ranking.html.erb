
<% @items_rankall.first(3).each_with_index do |item, i| %>
<div class="rank">
  <h1>Rank.<%= i+1 %></h1>
  <!-- 投稿機能実装後、attachment_image_tagで表示予定 -->
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image, :fill, 100, 100, class: "jacket_image" %>
    <p>
      <%= item.name %><br>
      <%= item.artist.name %>
    </p>
  <% end %>
</div>
<% end %>

<!-- 表示したいランキングのジャンルidを引数で渡してあげる予定です↓↓ -->
<%= link_to "more", "genres/:id/ranking", class:"btn btn-success see_more " %>
<!-- ランキング実装時、「genres_ranking_path()」に変更する予定↑↑↑ -->