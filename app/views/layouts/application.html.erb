<!DOCTYPE html>
<html>
  <head>
    <title>ManziRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
          </button>
          <%= link_to "卍Record", root_path, class: "navbar-brand 卍header" %>
        </div>

        <form class="navbar-form navbar-left " role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="検索キーワードを入れてください">
        </div>
        <button type="submit" class="btn btn-default">検索</button>
      </form>

        <div class="collapse navbar-collapse" id="navbarEexample">
          <% if user_signed_in? && current_user.admin == false %><!--ユーザがログインしたとき-->
          <div class="nav navbar-nav navbar-right nav-menu">

            <button type="button" class="btn btn-default navbar-btn"><%= link_to "マイページ", user_path(current_user.id) %></button>
            <button type="button" class="btn btn-default navbar-btn"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>
            <button type="button" class="btn btn-default navbar-btn"><%= link_to "カート", users_cart_path %></button>

            </div>

          <% elsif user_signed_in? && current_user.admin == true %> <!--adminのとき-->
              <div class="nav navbar-nav navbar-right nav-menu">

              <button type="button" class="btn btn-default navbar-btn"><%= link_to "マイページ", user_path(current_user.id) %></button>
              <button type="button" class="btn btn-default navbar-btn"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>

              </div>

          <% else %><!-- ゲストユーザのとき -->
            <div class="nav navbar-nav navbar-right nav-menu">
            <button type="button" class="btn btn-default navbar-btn"><%= link_to "会員登録", new_user_registration_path %></button>
            <button type="button" class="btn btn-default navbar-btn"><%= link_to "ログイン", new_user_session_path %></button>
            <button type="button" class="btn btn-default navbar-btn"><%= link_to "カート", users_cart_path %></button><!--ゲストユーザ用カートのルーティング要検討-->
          </div>

          <% end %>
        </div>
      </div>

    </nav>

    <%= render 'layouts/flash_messages' %>


    <%= yield %>


      <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="row container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"data-toggle="collapse"data-target="#navbarfooter">
            </button>
            <%= link_to "卍Record", root_path, class: "navbar-brand 卍footer" %>
          </div>

          <div class="collapse navbar-collapse" id="navbarfooter">

            <div class="footer-terms">
                <a>利用規約</a>
                <span>|</span>
                <a>プライバシー規約</a>
            </div>

            <% if user_signed_in? %>
              <span class="navbar-text navbar-right welcome-message">ようこそ <%= current_user.last_name %>さん</span>
            <% else %>
            <span class="navbar-text navbar-right welcome-message">ようこそ <a href="#" class="navbar-link">ゲスト</a> さん</span>
            <% end %>

            <!-- devise導入後、ログインユーザ名が表示されるようにする予定 -->
          </div>
        </div>
      </nav>

  </body>
</html>
